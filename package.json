{
  "name": "@dnajs/dna",
  "description": "Evolution-based components.",
  "version": "2.9.6",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:Chialab/dna.git"
  },
  "author": "Chialab <dev@chialab.io> (https://www.chialab.it)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chialab/dna/issues"
  },
  "homepage": "https://dna.chialab.io",
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "chai": "^4.1.2",
    "eslint": "^6.6.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-mocha": "^6.2.1",
    "lerna": "^3.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "rna build --production",
    "watch": "rna build --watch",
    "test": "rna lint + unit 'packages/*/test/**/*.spec.js' --browser --jsx.pragma h --context 'test/context.html'",
    "test-saucelabs": "rna lint + unit 'packages/*/test/**/*.spec.js' --saucelabs --jsx.pragma h --context 'test/context.html'",
    "lint": "rna lint",
    "start": "yarn install --ignore-scripts && rna build --watch",
    "prepublish": "yarn run build"
  }
}
