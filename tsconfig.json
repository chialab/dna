{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleResolution": "node"
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
